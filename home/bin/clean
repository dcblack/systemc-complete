#!/usr/bin/bash

SYNTAX="SYNTAX: clean [-exe|-logs|-all|-everything] [DIRLIST]"

function Realpath () {
  test -z "$*" && echo "" || \
  perl '-MCwd(abs_path)' -le "print abs_path(qq($*))"
}

unset DIRS
declare -a DIRS
V='-v'
let i=0
OPTS=
CMND="rm"
WHAT="intermediates"
while [[ $# -gt 0 ]]; do
  if [[ "$1" =~ ^-{1,2}h(elp)?$ ]]; then
    echo $SYNTAX
    exit 0
  elif [[ "$1" =~ ^-{1,2}q(uiet)?$ ]]; then
    V=''
  elif [[ "$1" =~ ^-{1,2}v(erbose)?$ ]]; then
    V='-v'
  elif [[ "$1" =~ ^-{1,2}a(ll)$ ]]; then
    WHAT="all"
    OPTS=A
  elif [[ "$1" =~ ^-{1,2}exe$ || "$1" =~ ^-x$ ]]; then
    WHAT+=" + executables"
    OPTS+=X
  elif [[ "$1" =~ ^-{1,2}logs$ ]]; then
    WHAT+=" + logfiles"
    OPTS+=L
  elif [[ "$1" =~ ^-{1,2}everything$ ]]; then
    WHAT="everything"
    OPTS=AXL
  elif [[ "$1" =~ ^-{1,2}n(otreally)$ ]]; then
    CMND="echo '# rm '"
  elif [[ "$1" =~ ^- ]]; then
    echo "ERROR: Unknown option '$1'." 1>&2
    exit 1
  elif [[ -d "$1" ]]; then
    let ++i
    DIRS[$i]="$1"
  else
    echo "ERROR: Bad directory '$1'." 1>&2
    exit 1
  fi
  shift
done
if [[ ${#DIR[@]} == 0 ]]; then
  DIRS[1]=$(Realpath .)
fi

echo "Cleaning $WHAT in ${DIRS[@]}"
for DIR in ${DIRS[@]}; do
  find "$DIR" -name '*.[doP]' -exec $CMND $V {} \;
  if   [[ $COMMAND =~ .*L.* ]]; then
    find "$DIR" -type f -name '*.log' -exec $CMND $V {} \;
  fi
  if [[ $OPTS =~ .*X.* ]]; then
    find "$DIR" -type f -name '*.x' -exec $CMND $V {} \;
  fi
  if [[ $OPTS =~ .*A.* ]]; then
    find "$DIR" -type f -name '*.log' -exec $CMND $V {} \;
    find "$DIR" -type d -name build -exec $CMND $V -fr {} \;
  fi
done
